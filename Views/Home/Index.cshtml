        }

        .banner-carousel {
            height: 400px;
            overflow: hidden;
            position: relative;
        }

        .banner-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

        .banner-slide.active {
            opacity: 1;
        }

        .banner-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .section-title {
            color: var(--secondary-color);
            font-weight: bold;
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            position: relative;
            display: flex;
            align-items: center;
        }

        .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background: linear-gradient(to right, var(--secondary-color), transparent);
            margin-left: 15px;
            opacity: 0.3;
        }

        .section-title i {
            color: var(--secondary-color);
            font-weight: bold;
            margin-right: 8px;
            font-size: 1.1rem;
        }

        .section-title.text-white i {
            color: white;
        }

        .section-title.text-white::after {
            background: linear-gradient(to right, white, transparent);
        }


        .quick-link-item {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            height: 100%;
        }

        .quick-link-item:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 90, 160, 0.3);
        }

        .quick-link-item i {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .quick-link-item:hover i {
            color: white;
        }

        .news-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e9ecef;
        }

        .news-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .news-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 15px;
            flex-shrink: 0;
        }

        .news-content h6 {
            font-size: 0.95rem;
            line-height: 1.4;
            margin-bottom: 8px;
        }

        .news-date {
            color: #6c757d;
            font-size: 0.85rem;
        }

        .event-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e9ecef;
        }

        .event-item:last-child {
            border-bottom: none;
        }

        .event-date {
            background: #fff5f5;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            margin-right: 15px;
            min-width: 70px;
            border: 1px solid #ffe0e0;
        }

        .event-day {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--secondary-color);
            line-height: 1;
        }

        .event-month {
            font-size: 0.8rem;
