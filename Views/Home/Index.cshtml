    <script>
        // Banner carousel functionality
        let currentSlide = 0;
        const slides = document.querySelectorAll('.banner-slide');
        const navButtons = document.querySelectorAll('.banner-nav button');
        const totalSlides = slides.length;

        function showSlide(index) {
            // Remove active class from all slides and nav buttons
            slides.forEach(slide => {
                slide.classList.remove('active');
            });
            navButtons.forEach(button => button.classList.remove('active'));

            // Set active slide and nav button
            slides[index].classList.add('active');
            navButtons[index].classList.add('active');
        }

        // Navigation button click handlers
        navButtons.forEach((button, index) => {
            button.addEventListener('click', () => {
                currentSlide = index;
                showSlide(currentSlide);
            });
        });

        // Video carousel functionality
        let videoCurrentIndex = 0;
        const videoTrack = document.querySelector('.video-track');
        const videoItems = document.querySelectorAll('.video-item');
        const totalVideos = videoItems.length;

        function nextVideo() {
            videoCurrentIndex = (videoCurrentIndex + 1) % totalVideos;
            updateVideoCarousel();
        }

        function prevVideo() {
            videoCurrentIndex = (videoCurrentIndex - 1 + totalVideos) % totalVideos;
            updateVideoCarousel();
        }

        function updateVideoCarousel() {
