        // Activities carousel functionality
        let activityCurrentIndex = 0;
        const activityTrack = document.querySelector('.activities-track');
        const activityItems = document.querySelectorAll('.activity-item');
        const totalActivities = activityItems.length;

        function nextActivity() {
            activityCurrentIndex = (activityCurrentIndex + 1) % totalActivities;
            updateActivityCarousel();
