            slides.forEach(slide => slide.classList.remove('active'));
            slides[index].classList.add('active');
        }

        // Video carousel functionality
        let videoCurrentIndex = 0;
        const videoTrack = document.querySelector('.video-track');
        const videoItems = document.querySelectorAll('.video-item');
        const totalVideos = videoItems.length;

        function nextVideo() {
            videoCurrentIndex = (videoCurrentIndex + 1) % totalVideos;
            updateVideoCarousel();
        }

        function prevVideo() {
            videoCurrentIndex = (videoCurrentIndex - 1 + totalVideos) % totalVideos;
            updateVideoCarousel();
        }

        function updateVideoCarousel() {
            const translateX = -videoCurrentIndex * 100;
            videoTrack.style.transform = `translateX(${translateX}%)`;
        }

        // Activities carousel functionality
        let activityCurrentIndex = 0;
        const activityTrack = document.querySelector('.activities-track');
