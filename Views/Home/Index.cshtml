@model EduAdmissionSite.Models.HomeIndexViewModel

<style>
        :root {
            --primary-color: #2c5aa0;
            --secondary-color: #e74c3c;
            --accent-color: #f39c12;
            --item-gap: 16px; /* unified spacing between list items */
        }

        .banner-carousel {
            position: relative;
            width: 100%;
            overflow: hidden;
            /* 16:9 aspect ratio - responsive height */
            aspect-ratio: 16 / 9;
            max-height: 800px; /* Further increased maximum height for very large screens */
            min-height: 450px; /* Further increased minimum height for small screens */
            border-radius: 0 0 12px 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .banner-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            transform: translateX(100%);
            transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .banner-slide.active {
            transform: translateX(0);
        }

        .banner-slide.prev {
            transform: translateX(-100%);
        }

        .banner-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            /* Smooth scaling for better quality */
            image-rendering: -webkit-optimize-contrast;
            image-rendering: crisp-edges;
        }

        /* Responsive adjustments for different screen sizes */
        @@media (max-width: 768px) {
            .banner-carousel {
                aspect-ratio: 16 / 9;
                min-height: 320px;
                max-height: 550px;
            }
        }

        @@media (max-width: 576px) {
            .banner-carousel {
                aspect-ratio: 16 / 9;
                min-height: 280px;
                max-height: 480px;
            }
        }



        /* Ensure banner is always visible and properly sized */
        .banner-carousel::before {
            content: '';
            display: block;
            padding-top: 56.25%; /* 16:9 aspect ratio (9/16 = 0.5625) */
        }

        /* Fallback for browsers that don't support aspect-ratio */
        @@supports not (aspect-ratio: 16 / 9) {
            .banner-carousel {
                height: 56.25vw;
                max-height: 800px;
                min-height: 450px;
            }
        }

        /* Navigation buttons */
        .banner-nav {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            z-index: 10;
        }

        .banner-nav button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 2px solid rgba(255, 255, 255, 0.5);
            background: rgba(255, 255, 255, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .banner-nav button.active {
            background: var(--secondary-color);
            border-color: var(--secondary-color);
        }

        .banner-nav button:hover {
            background: rgba(255, 255, 255, 0.7);
            border-color: rgba(255, 255, 255, 0.9);
        }

        .banner-nav button.active:hover {
            background: var(--secondary-color);
            border-color: var(--secondary-color);
        }


