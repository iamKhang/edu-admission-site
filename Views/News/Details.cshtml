@model Article
@using System.Linq
@{
    ViewData["Title"] = Model.Title;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: rgb(46, 58, 135);
            --primary-color-hex: #2E3A87;
            --secondary-color: #EC6C41;
            --text-color: #333;
            --bg-light: #f8f9fa;
            --bg-dark: #222;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            background-color: white;
        }

        .breadcrumb-section {
            background-color: #e3f2fd;
            padding: 1rem 0;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 0;
        }

        .breadcrumb-item a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

        .breadcrumb-item.active {
            color: var(--primary-color);
            font-weight: 500;
        }

        .section-title {
            color: var(--secondary-color);
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            position: relative;
            display: flex;
            align-items: center;
        }

        .section-title i {
            margin-right: 0.5rem;
            color: var(--secondary-color);
        }

        .section-title::after {
            content: '';
            flex: 1;
            height: 1px;
            background-color: var(--secondary-color);
            margin-left: 1rem;
        }

        .article-header {
            margin-bottom: 2rem;
        }

        .article-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--text-color);
            margin-bottom: 1rem;
            line-height: 1.3;
        }

        .article-meta {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
        }

        .article-meta i {
            color: var(--primary-color);
        }

        .article-content {
            font-size: 1.1rem;
            line-height: 1.8;
            margin-bottom: 1rem;
        }

        .article-image {
            width: 100%;
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 1.5rem 0;
        }

        .sidebar {
            background: white;
            border-radius: 8px;
            padding: 1.5rem;
        }

        .admission-menu {
            background: white;
            border-radius: 8px;
            padding: 0 1.5rem 1.5rem 1.5rem;
            margin-bottom: 2rem;
        }

        .sidebar-content {
            margin-top: 0;
        }

        .news-item {
            display: flex;
            gap: 0.75rem;
            padding: 0.75rem 0;
            border-bottom: 1px solid #eee;
            transition: all 0.2s ease;
            cursor: pointer;
            border-radius: 4px;
            margin-bottom: 0.5rem;
        }

        .news-item:hover {
            background-color: #f8f9fa;
            transform: translateX(2px);
        }

        .news-item:last-child {
            border-bottom: none;
        }

        .news-thumbnail {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
            flex-shrink: 0;
        }

        .news-content {
            flex: 1;
        }

        .news-title {
            font-size: 0.85rem;
            font-weight: 500;
            line-height: 1.3;
            color: var(--text-color);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 0.25rem;
        }

        .news-date {
            font-size: 0.75rem;
            color: #666;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .news-date i {
            color: var(--primary-color);
            font-size: 0.7rem;
        }

        .news-link {
            text-decoration: none;
            color: inherit;
        }

        .related-articles {
            margin: 20px 0;
        }

        .related-articles .section-title::before {
            content: '\f285';
            font-family: 'bootstrap-icons';
            font-size: 16px;
            color: var(--secondary-color);
            margin-right: 10px;
        }

        .related-article-card {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            height: 100%;
        }

        .related-article-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        }

        .related-article-link {
            text-decoration: none;
            color: inherit;
        }

        .related-article-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .related-article-content {
            padding: 1rem;
        }

        .related-article-title {
            font-size: 0.9rem;
            font-weight: 600;
            line-height: 1.4;
            color: var(--text-color);
            margin-bottom: 0.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .related-article-date {
            font-size: 0.8rem;
            color: #666;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .related-article-date i {
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <!-- Breadcrumb Section -->
    <div class="container-fluid breadcrumb-section">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">TRANG CHỦ</a></li>
                    <li class="breadcrumb-item"><a href="/News?category=@ViewBag.Category">@ViewBag.CategoryName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container" style="margin-top: 2rem;">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <div class="article-header">
                    <h1 class="article-title">@Model.Title</h1>
                    <div class="article-meta">
                        <span><i class="bi bi-calendar3"></i> @Model.PublishedAt.ToString("dd/MM/yyyy")</span>
                        <span><i class="bi bi-person"></i> Admin</span>
                    </div>
                </div>

                <div class="article-content">
                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        @Html.Raw(string.Join("\n", Model.Content.Split('\n').Skip(1)))
                    }
                    else
                    {
                        <p>Nội dung đang được cập nhật...</p>
                    }
                </div>

                <!-- Related Articles Section -->
                @if (ViewBag.LatestNews != null && ViewBag.LatestNews.Count > 0)
                {
                    <div class="related-articles">
                        <h3 class="section-title">TIN LIÊN QUAN</h3>
                        
                        <div class="row">
                            @{
                                var latestNews = ViewBag.LatestNews as List<Article>;
                                var relatedArticles = latestNews?.Take(3) ?? new List<Article>();
                            }
                            @foreach (var article in relatedArticles)
                            {
                                <div class="col-lg-4 col-md-6 col-12 mb-4">
                                    <div class="related-article-card">
                                        <a href="/News/Details/@article.Id" class="related-article-link">
                                            <img src="@article.ThumbnailUrl" 
                                                 alt="@article.Title" 
                                                 class="related-article-image"
                                                 onerror="this.src='/images/placeholder-news.jpg'">
                                            
                                            <div class="related-article-content">
                                                <h4 class="related-article-title">@article.Title</h4>
                                                
                                                <div class="related-article-date">
                                                    <i class="bi bi-calendar3"></i>
                                                    @article.PublishedAt.ToString("dd/MM/yyyy")
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 sidebar-content">
                <!-- Admission Menu -->
                <div class="admission-menu">
                    <partial name="_AdmissionMenu" />
                </div>

                <!-- Latest News -->
                <div class="sidebar">
                    <h3 class="section-title"><i class="bi bi-chevron-right"></i>TIN MỚI CẬP NHẬT</h3>
                    <div>
                        @if (ViewBag.LatestNews != null)
                        {
                            @foreach (var news in ViewBag.LatestNews)
                            {
                                <a href="/News/Details/@news.Id" class="news-link">
                                    <div class="news-item">
                                        <img src="@news.ThumbnailUrl" alt="@news.Title" class="news-thumbnail">
                                        <div class="news-content">
                                            <div class="news-title">@news.Title</div>
                                            <div class="news-date">
                                                <i class="bi bi-calendar3"></i>
                                                @news.PublishedAt.ToString("dd/MM/yyyy")
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
